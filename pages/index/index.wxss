
page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}


.img_swiper {
  width: 100%;
  height: 450rpx;
  display: block;
  position: relative;
  background: #f0f0f0;
}
.img-item {
  width: 100%;

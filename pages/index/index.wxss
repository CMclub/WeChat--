page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.img_swiper {
  width: 100%;
  height: 600rpx;
  display: block;
  position: relative;
  background: #f0f0f0;
}
.img-item {
  width: 100%;
  height: inherit;
}

.text-title{
  font-size: 18px;
  font-weight: bolder;
}

.btn{
  font-size: 16px;
}

.main-btn{
  width: 30%;
  padding: .3em .8em;
  margin-top: 8%;
  background: #e7e6e6;
  border: 1px solid #446d88;
  border-radius: .4em;
  font-size: 105%;
  line-height: 1.5;
}


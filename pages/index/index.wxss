}

.content{
  width: 80%;
  height: auto;
  margin: 0 auto;
}

.text-title{
  font-size: 18px;
  font-weight: bolder;
}

.text-content{
  text-align:center;
  letter-spacing:0.5px;
}

.btn{
  padding-bottom: 60px;
  font-size: 16px;
}

.main-btn{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 80rpx;
  margin-top: 4%;
  border-radius: .4em;
  font-size: 105%;
  line-height: 1.5;
  margin-bottom: 50rpx;
}

.choose{

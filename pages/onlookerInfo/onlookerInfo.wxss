/* pages/onlookerInfo/onlookerInfo.wxss */
@import "../record/record.wxss";
.container{
  display: flex;
  flex-flow: wrap;
}

.footer{
  text-align: center;
}

.items{
  width: auto;
  height: auto;
  margin-top: 5%;
  margin-left: 7%;
}

.img-item{
  display: flex;
  width: 300rpx;
  height: 280rpx;
  border-radius: 15px;
  background: rgb(234, 237, 236);
}

.state{
    width: 100%;
    height: 100rpx;
    background-color: #f0f0f0;
}


.state-title{
    color: #fe5555;
    padding-left: 50rpx;
    padding-top: 25rpx;
}

.adjust{
    padding-left: 50rpx;
    margin-bottom: 70rpx;
}

.line{
    margin: 0 auto;
    height: 1px;
    margin-left: 50px;
    margin-right: 50px;
    background-color: #D8D8D8;
}

.eval-result{
    border-radius: 10px;
    margin-top: 3%;
    background-color: #ffffff;
    width: 100%;
}


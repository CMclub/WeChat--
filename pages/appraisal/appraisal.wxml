<select prop-array='{{selectArrayType}}' bind:done='getKind' nowText="类别"></select>
<select prop-array='{{selectArrayExpert}}' bind:done='getExpert' nowText="专家"></select>

<text class="title">藏品图片</text>


<!-- here !!! -->
<view class='ui_uploader_cell'>
    <!-- 根据已选择的图片临时路径数组展示图片-->
    <view class='ui_uploader_item' wx:for="{{uploaderList}}" wx:key="{{index}}">
        <!-- 删除-->
        <icon class='ui_uploader_item_icon' bindtap='clearImg' data-index="{{index}}" type="clear" size="20" color="red"/>
        <!-- 图片-->
        <image bindtap='showImg' data-index="{{index}}" src='{{item}}'></image>
    </view>
    <image class="add-img" src="../../images/select-img/add.png" bindtap='addImg' wx:if="{{showUpload}}" data-index="{{index}}"></image>
</view>


<view class="description">
    <text class="title">藏品描述</text>
    <textarea class="context" maxlength="200" bindinput="countText" bindblur="getText">
    <text class="limitNum">{{limitNum|0}}/200</text>
    </textarea>
</view>

<button bindtap="check">提交</button>


page {
    display: flex;
    flex-direction: column;
    height: 100%;
    background-color: #eeeeee;
}
.title{
    padding-top: 3%;
    font-weight: bold;
}

.description{
    padding-top: 2%;
}

.add-img{
    padding-top: 1%;
    width: 165rpx;
    height: 165rpx;
    position: center;
}
.context{
    border-radius: 10px;
    margin-top: 3%;
    background-color: #ffffff;
    width: 100%;
    height: 500rpx;
}
.limitNum{
    position: absolute;
    bottom: 40rpx;
    right: 26rpx;
    color: #888;
}
.sub-btn{
    margin-top: 30%;
    width: 30%;
    padding: .3em .8em;
    background: #e7e6e6;
    border: 1px solid #446d88;
    border-radius: .4em;
    font-size: 105%;
    line-height: 1.5;
}


.ui_uploader_cell {
    width: 100%;
    padding: 40rpx;
    box-sizing: border-box;
}
.ui_uploader_item{
    float: left;
    position: relative;
    margin-right: 30rpx;
    margin-bottom: 30rpx;
    width: 165rpx;
    height: 165rpx;
}
.ui_uploader {
    float: left;
    position: relative;
    margin-right: 25rpx;
    margin-bottom: 25rpx;
    width: 165rpx;
    height: 165rpx;
    border: 2rpx solid #d9d9d9;
    box-sizing: border-box;
}

.ui_uploader:before {
    content: " ";
    position: absolute;
    width: 4rpx;
    height: 79rpx;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    background-color: #d9d9d9;
}

.ui_uploader:after {
    content: " ";
    position: absolute;
    height: 4rpx;
    width: 79rpx;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    background-color: #d9d9d9;
}
.ui_uploader_item_icon{
    position: absolute;
    right: -20rpx;
    top: -20rpx;
    background: #fff;
    border-radius: 50%;
}
.ui_uploader_item image {
    width: 100%;
    height: 100%;
}

page{
    background-color: #F6F6F6;
}

.right{
    width: 230rpx;
    margin: 60rpx;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.userinfo-avatar {
    width: 160rpx;
    height: 160rpx;
    margin: 30rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #000000;
    text-align: center;
    font-weight: 600;
}
.tabs{
    /*width: 80%;*/
    /*height: 800rpx;*/
    border-radius: 20rpx;
    background-color: #ffffff;
    margin: 50rpx auto;
}
.tab-item:nth-child(1){
    border-radius: 10px 10px 0 0;
}
.tab-item{
    width: auto;
    height: 100rpx;
    border-bottom: 1px solid #a8a8a8;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding:0 30rpx 0 30rpx;
}
.tab-item .right_arrow{
    width: 20rpx;
    height: 30rpx;
}
.item-img{
    width: 50rpx;
    height: 50rpx;
}
